<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.example.beats.MainActivity"
        android:paddingBottom="@dimen/first_ll_padding_bottom">
        <TextView
            android:id="@+id/now_playing_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Unity"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/first_ll_textview1_margin_top"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/now_playing_song_image"
            android:layout_width="268dp"
            android:layout_height="308dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/first_ll_imageview_margin_top"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:ignore="contentDescription"
            tools:src="@drawable/cloud_ten" />
        <TextView
            android:id="@+id/now_playing_song_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Fareoh ft. Ethan Thompson"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/first_ll_textview2_margin_top"/>

        <TextView
            android:id="@+id/now_playing_song_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Fareoh Singles"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/first_ll_textview3_margin_top"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/second_ll_margin_top">
            <ImageView
                android:id="@+id/backward_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="contentDescription"
                android:src="@drawable/ic_fast_rewind_black_24dp"
                android:layout_marginEnd="@dimen/second_ll_imageview_margin_end"
                android:layout_marginRight="@dimen/second_ll_imageview_margin_end" />
            <ImageView
                android:id="@+id/play_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="contentDescription"
                android:src="@drawable/ic_play_arrow_black_24dp" />
            <ImageView
                android:id="@+id/forward_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="contentDescription"
                android:src="@drawable/ic_fast_forward_black_24dp"
                android:layout_marginStart="@dimen/second_ll_imageview_margin_start"
                android:layout_marginLeft="@dimen/second_ll_imageview_margin_start" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
